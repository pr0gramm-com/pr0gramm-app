<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp">

        <ImageButton
            android:id="@+id/vote_up"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:padding="4dp"
            tools:src="@drawable/ic_vote_up"
            tools:tint="?android:textColorSecondary" />

        <ImageButton
            android:id="@+id/vote_down"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:padding="4dp"
            tools:src="@drawable/ic_vote_down"
            tools:tint="?android:textColorSecondary" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:background="?android:textColorSecondary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.pr0gramm.app.ui.views.UsernameView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextStyle.16.Bold"
                tools:text="Mopsalarm" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextStyle.14"
                android:textColor="?android:textColorTertiary"
                tools:text="546 Benis Â· vor 8 Stunden" />

        </LinearLayout>

        <com.pr0gramm.app.ui.views.CollectView
            android:id="@+id/collect"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:padding="4dp"
            tools:src="@drawable/ic_collection_no"
            tools:tint="?android:textColorSecondary" />

        <ImageButton
            android:id="@+id/action_follow"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            tools:src="@drawable/ic_action_follow_new"
            tools:tint="?android:textColorSecondary"
            tools:visibility="visible" />

    </LinearLayout>
</merge>